{
	"compilerOptions": {
		"baseUrl": "",
		
		"paths": {
			"$src/*": ["src/*"],
			"$lib": ["src/lib"],
			"$lib/*": ["src/lib/*"],
			"$stores/*": ["src/stores/*"],
			"$assets/*": ["src/assets/*"],
		
			
		},
		"rootDirs": [
			"",
			"./types"
		],
		"importsNotUsedAsValues": "error",
		"isolatedModules": true,
		"preserveValueImports": true,
		"lib": [
			"esnext",
			"DOM"
		],
		"moduleResolution": "node",
		"module": "esnext",
		"target": "esnext"
	},
	"include": [
		"src/**/*.js",
		"src/**/*.ts",
		"src/**/*.svelte"
, "src/lib/ioevents"	],
	"exclude": [
		"node_modules/**"		
	],
	
}